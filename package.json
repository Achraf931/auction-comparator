{
  "name": "auction-comparator",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:extension": "cd apps/extension && bun run dev",
    "dev:server": "cd apps/server && bun run dev",
    "dev": "bun run dev:server & bun run dev:extension",
    "build:extension": "cd apps/extension && bun run build",
    "build:server": "cd apps/server && bun run build",
    "build": "bun run build:server && bun run build:extension",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "eslint": "^9.39.2",
    "typescript": "5.9.3"
  }
}
